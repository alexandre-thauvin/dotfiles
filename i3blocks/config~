# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/home/toto/.config/i3blocks/i3blocklets/$BLOCK_NAME
separator_block_width=15
markup=none

# Generic media player support
# This displays "ARTIST - SONG" if a music is playing.
# Supported players are: spotify, vlc, audacious, xmms2, mplayer, and others.
[mediaplayer]
color=#35fc03
instance=spotify
interval=5
signal=10

#[battery2]
#markup=pango
#interval=30

# Weather indicator
[weather]
#command=curl wttr.in/Lausanne?format="%l:+%c+%t+%h"
interval=300
color=#6fa3f7

#Volume indicator
#
# The first parameter sets the step (and units to display)
# The second parameter overrides the mixer selection
# See the script for details.
[volume]
DEFAULT_COLOR=#42a0cf
instance=Master
interval=once
signal=10

[iface]
#LABEL=wlan0:
#IFACE=wlan0
#ADDRESS_FAMILY=inet6?
color=#f7da6f
interval=10
# set this to 1 to display the name of the connected WIFI interface instead of the IP address.
display_wifi_name=0

# Memory usage
#
# The type defaults to "mem" if the instance is not specified.
[memory]
color=#d88aff
#label=RAM
interval=2

[cpu_usage]
